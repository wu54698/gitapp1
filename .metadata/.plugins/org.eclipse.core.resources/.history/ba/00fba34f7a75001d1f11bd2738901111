<script>
	$(document).ready(
			function() {
				$.ajax({
					url : "categories",
					method : "GET",
					dataType : "json",
					success : function(res) {
						console.log(res);

						var sel = $('<select>',{class:'custom-select'}).prependTo('#catediv');
						$(res).each(
								function() {
									sel.append($("<option>").attr('value',
											this.SN).text(this.name));
								});

					},
					error : function(err) {
						console.log(err)
					},
				});
			});
</script>

