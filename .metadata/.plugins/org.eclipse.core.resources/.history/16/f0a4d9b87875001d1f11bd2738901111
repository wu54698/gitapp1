<script>
$(document).ready(function() {
	$.ajax({
		url: "categories",
		method: "GET",
		dataType: "json",
		success: function(res) {
			console.log(res);

			var sel = $('<select>').before('#newthread');
			$(res).each(function() {
			 sel.append($("<option>").attr('value',this.val).text(this.text));
			});
			
		},
		error: function(err) { console.log(err) },
	});
});
</script>

