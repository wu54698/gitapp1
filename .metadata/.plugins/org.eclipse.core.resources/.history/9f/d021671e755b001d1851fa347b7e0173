		case 5:
			condition = "BETWEEN 20000000 AND 29999999499999";
			break;
		case 6:
			condition = ">30000000";
			break;

		}
		
		condition += "AND district.SN=" + district ;
		
		List<List<String>> rowlist = new ArrayList<List<String>>();
		rowlist = query.getData(condition);
		
		for( List l : rowlist ) {
			System.out.println(l);	
		}

